@model GameSiteProject.Models.ViewModels.LoginViewModel

<h2>@ViewData["Login"]</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>@ViewData["Email"]</label>
        <input type="text" asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>@ViewData["Password"]</label>
        <input type="password" asp-for="Password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@ViewData["Login"]</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}