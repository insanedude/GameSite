@model IEnumerable<GameSiteProject.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users Index</h1>

<p>
    <a asp-action="Register" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DateJoined)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ProfilePicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().UserInformation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => user.Nickname)</td>
                <td>@Html.DisplayFor(modelItem => user.Email)</td>
                <td>@Html.DisplayFor(modelItem => user.DateJoined)</td>
                <td>@Html.DisplayFor(modelItem => user.ProfilePicturePath)</td>
                <td>@Html.DisplayFor(modelItem => user.TotalScore)</td>
                <td>@Html.DisplayFor(modelItem => user.UserInformation)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>