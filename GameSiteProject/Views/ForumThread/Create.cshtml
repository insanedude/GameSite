@model GameSiteProject.Models.ForumThread

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Create New Forum Discussion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body>
<div class="container mt-4">
    <h2>Create New Discussion</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GameId" class="control-label">Select Game</label>
            <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId">
                <option value="">-- Select a Game --</option>
            </select>
            <span asp-validation-for="GameId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Discussion</button>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>